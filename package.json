{
  "private": true,
  "scripts": {
    "prebuild": "rm -rf dist",
    "build:css": "node-sass scss/style.scss -o dist --output-style expanded",
    "watch:css": "node-sass -w scss/style.scss -o dist --output-style expanded",
    "build:html": "pug index.pug -o dist",
    "watch:html": "pug index.pug -w -o dist",
    "build": "run-p build:*",
    "prewatch": "run-s build",
    "watch": "run-p watch:*",
    "serve": "hs dist & yarn watch"
  },
  "dependencies": {
    "http-server": "^0.11.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6"
  },
  "devDependencies": {
    "stylelint": "^9.10.1"
  }
}
